@using TCC.Domain.Enums;
@model TCC.Application.ViewModels.AulaViewModel

@{
    ViewData["Title"] = "LogPlay - Aulas";
}

<div class="aula-main-container">
    <div class="banner-aula">
        <h1 class="titulo-aula">@Html.DisplayFor(m => m.Nome)</h1>
        <p class="descricao-aula">@Html.DisplayFor(m => m.Descricao)</p>
        
        <div class="voltar-section">
            <div class="botao-voltar">
                <a class="btn btn-primary" asp-controller="Cursos" asp-action="Variáveis" asp-route-name="">
                    Voltar para o Curso
                </a>
            </div>
        </div>
    </div>

    @if (ViewBag.Images != null)
    {
        <div class="pdf-container">
            @foreach (var imageData in ViewBag.Images)
            {
                <img src="data:image/png;base64,@Convert.ToBase64String(imageData)" />
            }
        </div>
    }


    <div class="exercicios-container">
        <h2>Exercícios</h2>        
        <form>
            @foreach (var exercicio in Model.Exercicios)
            {
                <div class="exercicio-element">
                    <h3>@exercicio.Enunciado</h3>
                    <label>
                        <input type="radio" name="resposta_@exercicio.Id" value="@exercicio.AlternativaA">
                        @exercicio.AlternativaA
                    </label>
                    <label>
                        <input type="radio" name="resposta_@exercicio.Id" value="@exercicio.AlternativaB">
                        @exercicio.AlternativaB
                    </label>
                    <label>
                        <input type="radio" name="resposta_@exercicio.Id" value="@exercicio.AlternativaC">
                        @exercicio.AlternativaC
                    </label>
                    <label>
                        <input type="radio" name="resposta_@exercicio.Id" value="@exercicio.AlternativaD">
                        @exercicio.AlternativaD
                    </label>

                </div>
            }
        </form>
                <div class="botao-verificar">
                    <a class="btn btn-primary" >
                        Verificar as Respostas
                    </a>
                </div>            
    </div>
</div>
   



    












